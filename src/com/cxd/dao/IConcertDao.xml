<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.cxd.dao.IConcertDao">
  
  	<resultMap type="concert" id="findByTypes">
  		<id column="id" property="id"/>
  		<result column="name" property="name"/>
  		<result column="address" property="address"/>
  		<result column="context" property="context"/>
  		<result column="photo" property="photo"/>
  		<result column="starttime" property="starttime"/>
  		<result column="endtime" property="endtime"/>
  		<result column="flag" property="flag"/>
  		<association property="city" resultMap="city"/>
  		<association property="ticket" resultMap="ticket"/>
  	</resultMap>
  	
  	<resultMap type="city" id="city">
  		<id column="id" property="id"/>
  			<result column="cname" property="name"/>
  	</resultMap>
  	
  	<resultMap type="ticket" id="ticket">
  		<id column="id" property="id"/>
  		<result column="price" property="price"/>
  		<result column="concertID" property="concertID"/>
  		<result column="remaining" property="remaining"/>
  		<result column="falg" property="falg"/>
  	</resultMap>
  	
  	
  	
  	<!-- 按类型查询 -->
  	<select id="findByTypes" parameterType="String" resultMap="findByTypes">
  		select *,c.name cname,t.* FROM concert ct ,genre g ,city c ,ticket t 
		where c.id = ct.id and 
		g.concertID = ct.id and 
		t.concertID=ct.id and 
		g.types in ( #{leixing} ) 
  	</select>
  	
  	<!-- 按城市查询 -->
  	<select id="findByCity" parameterType="String" resultMap="findByTypes">
  		select ct.*,c.name cname,t.* FROM concert ct ,genre g ,city c ,ticket t 
		where c.id = ct.cityID and 
		g.concertID = ct.id and 
		t.concertID=ct.id and 
		c.`name` in ( #{chengshi} ) 
  	</select>
  	
  	
  </mapper>